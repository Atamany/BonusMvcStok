@model BonusMvcStok.Models.Entity.TblPersonel

@{
    ViewBag.Title = "YeniPersonel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Personel Ekleme</h2><br />
    <label>Ad</label>
    @Html.TextBoxFor(x => x.ad, new { @class = "form-control", @placeholder = "Ad" })
    <label>Soyad</label>
    @Html.TextBoxFor(x => x.soyad, new { @class = "form-control", @placeholder = "Soyad" })
    <label>Departman</label>
    @Html.TextBoxFor(x => x.departman, new { @class = "form-control", @placeholder = "Departman" })<br />
    
    <button class="btn btn-info">Kaydet!</button>
</form>


