@using BonusMvcStok.Models.Entity;
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Kategori", FormMethod.Get))
{
    <p>
        Kategori Adı: @Html.TextBox("p")
        <input type="submit" class="btn btn-primary" value="Ara">
    </p>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td><a href="/Kategori/KategoriSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@x.id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<td><a href="/Kategori/YeniKategori/" class="btn btn-primary">Yeni Kategori</a></td>

