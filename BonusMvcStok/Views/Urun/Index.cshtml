@using BonusMvcStok.Models.Entity;
@model List<TblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
{
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" class="btn btn-primary" value="Ara">
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyatı</th>
        <th>Satış Fiyatı</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.id</td>
            <td>@x.ad</td>
            <td>@x.marka</td>
            <td>@x.stok</td>
            <td>@x.alisfiyat</td>
            <td>@x.satisfiyat</td>
            <td>@x.TblKategori.ad</td>
            <td><a href="/Urun/UrunSil/@x.id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@x.id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<td><a href="/Urun/YeniUrun/" class="btn btn-primary">Yeni Ürün</a></td>



